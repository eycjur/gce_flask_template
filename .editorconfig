root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{yml,yaml}]
indent_size = 2

[*.{html,js,json,ts,tsx,css,scss}]
indent_size = 2

[*.rst]
indent_size = 3

# https://github.com/RehanSaeed/EditorConfig/blob/main/.editorconfig
